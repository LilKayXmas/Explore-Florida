<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/attractionNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attraction_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/attractionDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attractionNameTextView"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="@string/attraction_description"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/attractionImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/attractionDescriptionTextView"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/attraction_image_content_description"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/loadWebsiteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attractionImageView"
        android:layout_marginTop="27dp"
        android:text="@string/load_website_button_text" />

    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_feedback_button_text"
        android:layout_below="@id/loadWebsiteButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</RelativeLayout>

