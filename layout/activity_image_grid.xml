<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="16dp"
    android:orientation="horizontal">

    <!-- Image placeholders (replace with your images) -->
    <ImageView
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:contentDescription="Description for image 1"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:contentDescription="Description for image 2"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:contentDescription="Description for image 3"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:contentDescription="Description for image 4"/>

</GridLayout>
